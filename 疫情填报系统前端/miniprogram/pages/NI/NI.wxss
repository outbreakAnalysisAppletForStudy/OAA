.layoutDailyleft{
  background-color: #ffffff;
  height: 65%;
  font-weight: 700;
}
.layoutDailyleft .title{
  font-size: 60rpx;
  color: #f25f5c;
}
.layoutDailyleftText{
  height: 10%;
  font-size: 50rpx;
  display: flex;
  padding-left: 20rpx;
  margin-left: 50rpx; 
  margin-top: 100rpx;
  align-items: center;
}

.layoutDailyleftText .thanYes{
  font-size: 45rpx;
  padding-left: 5px;
}

.layoutDailyleft .danger{
  color: #f25f5c;
  background-color: #fcd5d3;
  border-left: 5rpx  solid #F25F5C;
}
.layoutDailyleft .warn{
  color: #ffe066;
  background-color: #fffae3;
  border-left: 5rpx  solid #ffe066;
}
.layoutDailyleft .dethod{
  color: #535452;
  background-color: #e8e8e8;
   border-left: 5rpx  solid #535452;
}
.layoutDailyleft .curd{
  color: #70c1b3;
  background-color: #def1ee;
  border-left: 5rpx  solid #70c1b3;
}
