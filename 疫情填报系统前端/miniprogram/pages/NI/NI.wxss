/* components/dailyData.wxss */

.layoutDailyleft{
  background-color: #3370c0;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  height: 90%;
  width: 100%;
  padding-left: 20rpx;
  font-weight: 700;
}
.layoutDailyleft .title{
  font-size: 25px;

}
.layoutDailyleftText{
  font-size: 20px;
  display: flex;
  align-items: flex-end;
}
.layoutDailyleftText .text{
  font-size: 13px;
}
.layoutDailyleftText .thanYes{
  font-size: 10px;
  color: #dadada;
  padding-left: 5px;
}
.layoutDailyleft .error{
  color: rgb(235, 164, 72);
}
.layoutDailyleft .danger{
  color: #F56C6C;
}
.layoutDailyleft .warn{
  color: rgb(230, 176, 96);
}
.layoutDailyleft .dethod{
  color: #909399;
}
.layoutDailyleft .curd{
  color: #67C23A;
}
.layoutDailyRight{
  width: 700rpx;
  font-weight: 200;
  display: flex;
  justify-content: flex-end;
  font-size: 10px;
}