<!--pages/log/log.wxml-->
<view class="container">
    <form>
      <view class="section">身份证号:</view>
      <input type="text" class="input" name="IDNum" id="IDNum" placeholder="请输入身份证号" bindinput="setIDNum" />
      <view class="section">手机号:</view>
      <input type="text" class="input" name="PhoneNum" id="PhoneNum" placeholder="请输入手机号" bindinput="setPhoneNum" />
      <view class="section">地区:</view>
  <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
    <view class="picker">
      {{region[0]}}，{{region[1]}}，{{region[2]}}
    </view>
  </picker>
      <view class="section">地址:</view>
      <input type="text" class="input" name="Pos" id="Pos" placeholder="请输入地址" bindinput="setPos" />
      <view class="section">健康状况:</view>
      <radio-group bindchange="setPerStatus">
        <label>
          <radio value="0">疑似</radio>
        </label>
        <label>
          <radio value="1">确诊</radio>
        </label>
        <label>
          <radio value="2">痊愈</radio>
        </label>
        <label>
          <radio value="3">死亡</radio>
        </label>
      </radio-group>
      <button form-type="submit" class="button" bindtap="fromsubmit">提交</button>
    </form>
</view>
