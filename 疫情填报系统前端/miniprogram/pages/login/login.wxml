<view class="container1">
  <text class="mytext">管理人员登陆</text>
  <image class="userinfo-avatar1" src="{{userpng}}"></image>
  <text class="userinfo-nickname">{{username}}</text>
  <button class="button" hover-class="mybutton-hover" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <form>
      <view class="input-text">
      <input type="text" class="input-text1" name="IDNum" id="IDNum" placeholder="身份证号" bindinput="setIDNum" />
      </view>
      <view class="input-text">
      <input type="text" class="input-text1" name="PhoneNum" id="PhoneNum" placeholder="手机号" bindinput="setPhoneNum" />
      </view>
      <button class="button1"hover-class="mybutton-hover1" bindtap="login">登陆</button>
    </form>
</view>
