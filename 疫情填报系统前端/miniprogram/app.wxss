/**app.wxss**/

page{
  height: 100%;
}
.container {
  background-color:rgb(86, 159, 255);
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 400rpx 0 500rpx;
  box-sizing: border-box;
} 
.menu-item{  
  width: 32%;  
  float: left;  
  text-align: center;  
  padding-top: 8rpx; 
  border-bottom: 1%  #F25F5C; 
}  
.img{ 
  width: 23px;  
  height: 23px;  
  display: block;  
  margin:auto;  
}  
.clear{  
  clear: both;  
}  
.tab-bar{  

  background-color: #ffffff;
  height:10%;
  position: fixed;  
  width: 100%;  
  padding: 0 2%;  
}  
